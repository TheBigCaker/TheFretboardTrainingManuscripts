modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Git Push"
mode = "sequential"
author = 49724133

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git push -u origin main"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35857
externalPort = 3000

[[ports]]
localPort = 41879
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "vite", "preview", "--host", "0.0.0.0", "--port", "5000"]
build = ["npm", "run", "build"]
